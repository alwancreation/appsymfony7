{% extends 'base.html.twig' %}
{% block body %}

    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg" id="mainNav">
        <div class="container px-4">
            <a class="navbar-brand" href="/">
                {% if app_settings.application_logo %}
                    <img src="{{ asset('uploads/settings/' ~ app_settings.application_logo) }}" height="120" />
                {% else %}
                    {{ app_settings.application_name }}
                {% endif %}
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ms-auto">
                    {% if app.user %}
                        <li class="nav-item"><a class="nav-link" href="{{ path('admin_default_index') }}">{% trans %}Dashboard{% endtrans %}</a></li>
                    {% else %}
                    <li class="nav-item"><a class="nav-link" href="{{ path('admin_default_index') }}">{% trans %}Login{% endtrans %}</a></li>
                    {% endif %}
                    <li class="nav-item"><a class="nav-link" href="#">{% trans %}Help{% endtrans %}</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Header-->
    <header class="bg-primary bg-gradient text-white py-5">
        <div class="container p-4 text-center">
            <h1 class="fw-bolder">{% trans %}Welcome to{% endtrans %} {{ app_settings.application_name }}</h1>
            <p class="lead">{{ app_settings.application_description }}</p>
            <a class="btn btn-lg btn-light" href="{{ path('admin_default_index') }}">{% trans %}Login To The Application{% endtrans %}</a>
        </div>

{% extends "admin/base.html.twig" %}
{% block body %}


    <div class="page-header">
        <div class="page-title">
            <h3>
                {% trans from "admin" %}User{% endtrans %}
                <small>{% trans from "admin" %}Edit{% endtrans %}</small>
            </h3>
        </div>

    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h6 class="panel-title">
                {% trans from "admin" %}Modifier{% endtrans %}
            </h6>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h6 class="panel-title">
                                {% trans from "admin" %}Edit{% endtrans %}
                            </h6>
                        </div>
                        <div class="panel-body">
                            {{ form_start(edit_form) }}
                            {{ form_errors(edit_form) }}
                            {{ form_widget(edit_form) }}
                            <button type="submit" class="btn btn-primary">{% trans from "admin" %}Save{% endtrans %}</button>
                            {{ form_end(edit_form) }}
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">

                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h6 class="panel-title">
                                {% trans from "admin" %}Edit password{% endtrans %}
                            </h6>
                        </div>
                        <div class="panel-body">
                            {{ form_start(edit_form_password) }}
                                {{ form_errors(edit_form_password) }}
                                {{ form_widget(edit_form_password) }}
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary">{% trans from 'admin' %}Update{% endtrans %}</button>
                                </div>
                            {{ form_end(edit_form_password) }}
                        </div>

                    </div>


                </div>
                <div class="col-sm-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">{% trans from "admin" %}User Roles{% endtrans %}</div>
                        <div class="panel-body">
                            {{ form_start(edit_form_role) }}
                            {{ form_errors(edit_form_role) }}
                            {{ form_widget(edit_form_role) }}
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">{% trans from 'admin' %}Edit roles{% endtrans %}</button>
                            </div>
                            {{ form_end(edit_form_role) }}
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <a href="{{ path('users') }}" class="btn btn-default">
                {% trans from "admin" %}Back{% endtrans %}
            </a>
        </div>
    </div>

{% endblock %}
